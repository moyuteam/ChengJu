/* components/loading/loading.wxss */
.loading {
  padding-top: 300px;
  padding-bottom: 300px;
  margin-left: auto;
  margin-right: auto;
  width: 70px;
  margin: 0 auto;
  text-align: center;
}

.loading > view {
  width: 30rpx;
  height: 30rpx;
  background-color: rgba(255,160,0,0.8);

  border-radius: 100%;
  display: inline-block;
  animation: sk-bouncedelay 1s infinite ease-in-out both;
}

.loading .bounce1 {
  animation-delay: -0.64s;
}

.loading .bounce2 {
  animation-delay: -0.32s;
}

@keyframes sk-bouncedelay {
  0%, 80%, 100% { 
    transform: scale(0);
  } 40% { 
    transform: scale(1.0);
  }
}
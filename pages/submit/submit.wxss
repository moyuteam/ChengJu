.body{
  padding: 20rpx;
  align-items: center;
}
.name{
  height: 100rpx;
  font-size:60rpx;
  margin-top:20rpx;
  margin-left: 20rpx;
  margin-bottom: 15rpx;
  color: #757575;
}
.divLine{
  background: #EEEEEE;
  height: 5rpx;
}
.description{
  margin: 20rpx;
}

.item {    
  position:relative;
  width:180rpx;
  height:180rpx;
  margin: 25rpx;
  /* overflow:hidden; */
}
.itemImg{
  position: absolute;
  left: 0;
  top:0; 
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index:1;
}
.itemImg image{
  width: 100%;
  height: 100%;
}
/*add按钮*/
 .add_photo{
  position:absolute;
  left: 0;
  top: 0; 
  width: 100%;
  height: 100%;
  background: #fff;
  z-index:2;
}

/*删除按钮*/
.delete {    
  position:absolute;
  right:0;
  top:0;
  /* background:#ccc; */
  opacity:1;
  height: 36rpx;
  font-size:22rpx;
  font-weight:700;
  padding:0 8rpx 0 10rpx;
  color: #999;
}


.input{
  display: flex;
}
.icon{
  width: 20%;
  height: 20px;
  margin-left: -30rpx;
  margin-right: -40rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.input_title{
  margin: 20rpx;
  color:#212121;
}
.input_content{
  margin:20rpx;
  color: #212121;
}

.submit_btn{
  color: white;
  background: rgba(255, 162, 0, 0.788);
  border-color:rgba(255, 162, 0, 0.788);
  border-radius: 100rpx;
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}



<view class="body">
  <view class="input_text">
    <view class="input_title">活动名称:</view>
    <input class="input_content" />
  </view>

  <view class="input_text">
    <view class="input_title">活动时间:</view>
    <picker mode="multiSelector" bindchange="bindMultiPickerChange"             bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
        <input value='{{time}}'  class="input_content"/>
    </picker>
  </view>

  <view class="input_text">
    <view class="input_title">活动人数:</view>
    <input class="input_content" placeholder='只接受数字,例如:“20”' />
  </view>

  <view class="input_text">
    <view class="input_title">活动详情:</view>
    <textarea class="input_content" placeholder=''/>
  </view>

  <view class="input_text">
    <view class="input_title">活动标签:</view>
    <view>
      <input class="input_content" placeholder='标签一'/>
      <input class="input_content" placeholder='标签二'/>
      <input class="input_content" placeholder='标签三'/>
      <input class="input_content" placeholder='标签四'/>
    </view>
  </view>
  
</view>

.body{
  padding: 20rpx;
  align-items: center;
}
.name{
  height: 100rpx;
  font-size:60rpx;
  margin-top:20rpx;
  margin-left: 20rpx;
  margin-bottom: 15rpx;
  color: #757575;
}
.divLine{
  background: #EEEEEE;
  height: 5rpx;
}
.description{
  margin: 20rpx;
  height:700rpx;
}

.item {    
  position:relative;
  width:210rpx;
  height:210rpx;
  margin: 25rpx;
  margin-bottom: 20rpx;
  /* overflow:hidden; */
}
.itemImg{
  position: absolute;
  left: 0;
  top:0; 
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index:1;
}
.itemImg image{
  width: 100%;
  height: 100%;
}
/*add按钮*/
 .add_photo{
  position:absolute;
  left: 0;
  top: 0; 
  width: 100%;
  height: 100%;
  background: #fff;
  z-index:2;
}

/*删除按钮*/
.delete {    
  position:absolute;
  right:0;
  top:0;
  /* background:#ccc; */
  opacity:1;
  height: 32rpx;
  font-size:25rpx;
  font-weight:700;
  padding:0 8rpx 0 10rpx;
  color: #757575;
  background-color:#999;
}

.submit_btn{
  color: white;
  background: rgba(255, 162, 0, 0.788);
  border-color:rgba(255, 162, 0, 0.788);
  border-radius: 20rpx;
  width: 45%;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  display:block;
  margin: 0 auto;
}
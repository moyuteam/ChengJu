/* pages/index1/index1.wxss */
.search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:100%;
  height:70rpx;
  background-color:rgba(245,245,245,0.8);
  margin-top:10rpx;
  margin-left: 15rpx;
  margin-right: 50rpx;
  border:1rpx;
  border-color: #FFF;
  border-radius: 5rpx;
  /*box-shadow:  0 6rpx 24rpx rgba(54, 125, 196, 0.12);*/
}

/* 搜索框提示文字样式 */
.search input
{
  font-size:30rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
}

/* 搜索框小图标 */
.search image
{ 
  width:50rpx;
  height:50rpx;
  padding-right:40rpx;
}

.section{
    background-color:#FFF;
    padding:0;
}

.contain{
  margin: 10rpx;
}

.image{
  margin: 10px;
  width: 100px;
  height: 70px;
  position: relative;

}

.acti-image{
  position: absolute;
  width:100%;
  height:100%;  
  overflow:hidden;
  border-radius:15rpx;
}

.acti-info{
  margin-top: 10px;
  
}

#acti-title{
  width:250px;
  justify-content: left;
  word-wrap: break-word;
  font-size:110%;
  font-weight: bold;
  color:#212121;
  position:relative;
}

#acti-time{
  width: 300rpx;
  margin-right: 10rpx;
  font-size:80%;
  color:#757575;
}

#acti-date{
  font-size:80%;
  color:#757575;
}

.section__title{
  font-family: "Times New Roman", Times, serif;
}

#white{
    background-color: rgb(255, 255, 255);
    height:90px;
    margin: 18rpx;
    border:2px solid;
    border-radius: 18rpx;
    border-color:  rgba(255,255,255,0.8);
    box-shadow: 0 6rpx 24rpx rgba(54, 125, 196, 0.12);
    display: flex;
}

#timeClock{
  position:relative;
  width: 20%;
  height: 20px;
  margin-right: 5rpx;
}

.time{
  margin-top: 10rpx;
  position:relative;
  align-items: center;
  display:flex;
}

.acti-tag{
  display: flex;
  position: relative;

}
/* pages/index1/index1.wxss */
.box1{
  width:50px;
  height:50px;
  background-color: blue;
}

.hover_class{
  background-color: aqua;
  opacity: .5;
}

.section{
    background-color:rgba(255,160,0,0.4);
    padding:0;
}

.contain{
  margin: 10rpx;
}

image{
  width: 20%;
  height: 90px;
}

.acti-image{
  align-items: left;
  position:relative;
  left:20px;
  top:0px;
}

#acti-title{
  width:250px;
  display: flex;
  justify-content: left;
  word-wrap: break-word;
  font-size:100%;
  font-weight: normal;
  color:#212121;
  position:relative;
  left:97px;
  top:-90px;
}

#acti-time{
  position:relative;
  left:-20px;
  top:-43px;
  font-size:80%;
  color:#757575;
}

.section__title{
  font-family: "Times New Roman", Times, serif;
}

#white{
    background-color: rgb(255, 255, 255);
    height:90px;
    margin: 10rpx;
    top:10rpx;
    border:2px solid;
    border-radius: 10px;
    border-color:  rgba(255,255,255,0.8);
}

#timeClock{
  position:relative;
  top:-43px;
  width: 20%;
  height: 20px;
}

.time{
  position:relative;
  top:-43px;
  left:70px;
  align-items: center;
  display:flex;
}
.section{
    background-color:#FFF;
    padding:0;
}

.contain{
  margin: 10rpx;
}

.image{
  margin: 10px;
  width: 100px;
  height: 80px;
  position: relative;

}

.acti-image{
  position: absolute;
  width:100%;
  height:100%;  
  overflow:hidden;
  border-radius:15rpx;
}

.acti-info{
  margin-top: 10px;
  
}

#acti-title{
  width:250px;
  justify-content: left;
  word-wrap: break-word;
  font-size:110%;
  font-weight: bold;
  color:#212121;
  position:relative;
}

#acti-time{
  width: 300rpx;
  margin-right: 10rpx;
  font-size:80%;
  color:#757575;
}

#acti-date{
  font-size:80%;
  color:#757575;
}

.section__title{
  font-family: "Times New Roman", Times, serif;
}

#white{
    background-color: rgb(255, 255, 255);
    height:100px;
    margin: 18rpx;
    border:2px solid;
    border-radius: 18rpx;
    border-color:  rgba(255,255,255,0.8);
    box-shadow: 0 6rpx 24rpx rgba(54, 125, 196, 0.12);
    display: flex;
}

#timeClock{
  position:relative;
  width: 20%;
  height: 20px;
  margin-right: 5rpx;
}

.time{
  margin-top: 10rpx;
  position:relative;
  align-items: center;
  display:flex;
}

.acti-tag{
  display: flex;
  position: relative;
  margin-top: 10rpx;
}

.time-axis {
  width: 100%;
  height: 270rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.date {
  position: absolute;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #757575;
  font-size: 10pt;
  width: 21%;
}

.line {
  display: flex;
  flex-direction: column;
  margin-left: 170rpx;
}

.online-top-close {
  width: 1rpx;
  height: 124rpx;
  background: rgba(255, 162, 0, 0.788);
}

.dot-close {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  margin-left: -5rpx;
  background: rgba(255, 162, 0, 0.788);
}

.online-bottom {
  width: 1rpx;
  height: 124rpx;
  background: rgba(255, 162, 0, 0.788);
}
.white-joined {
  width: 72%;
  margin-left: 15rpx;
  color: #757575;
  background-color: rgb(255, 255, 255);
  height:250rpx;
  border:2px solid;
  border-radius: 18rpx;
  border-color:  rgba(255,255,255,0.8);
  box-shadow: 0 6rpx 24rpx rgba(54, 125, 196, 0.12);
}

.name{
  color:#212121;
  margin: 10rpx 0rpx 0rpx 20rpx;
  font-size: 14pt;
}

.image-joined{
  margin: 15rpx 0rpx 10rpx 20rpx;
  width: 110px;
  height: 80px;
  overflow: hidden;
  border-radius: 15rpx;
}
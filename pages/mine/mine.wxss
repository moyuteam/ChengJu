/* 用户信息显示 */
.user-info-container {
  margin:60rpx 60rpx 30rpx 60rpx;
  display: flex;
}

.user-info-container .avatar {
  overflow:hidden;
  display: block;
  width: 150rpx;
  height: 150rpx;
  border: 5rpx solid white;
  border-radius: 50%;
  box-shadow: 0 6rpx 16rpx rgba(25, 118, 210, 0.3);
}

.info {
  margin: 40rpx;
  align-items: center;
  justify-content: center;
}

.info > .name {
  color: black;
  font-weight: bold;
  font-size: inherit;
}

.info > .statistics {
  color: black;
  font-weight: bold;
  font-size: 32rpx;
}

